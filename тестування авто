def write_car_detailsdiagnostic_check(file_name, car_details):
    with open(file_name, 'a') as file:
        file.write(car_details + '\n')
    print("Вітаю! Ця програма допоможе вам виявити можливі несправності автомобіля.")
    print("Будь ласка, відповідайте на запитання 'так' або 'ні'.\n")

    # Запитання про бензиновий двигун
    answer = input("Чи є паливо в баку? ")
    if answer.lower() == "ні":
        print("Додайте паливо в бак.")

    answer = input("Чи горить лампочка 'Check Engine'? ")
    if answer.lower() == "так":
        print("Необхідно провести діагностику двигуна.")

    # Запитання про систему запалювання
    answer = input("Чи є іскра на свічках запалювання? ")
    if answer.lower() == "ні":
        print("Перевірте свічки запалювання та систему запалювання.")

    # Запитання про акумулятор
    answer = input("Чи працює стартер? ")
    if answer.lower() == "ні":
        print("Перевірте стан акумулятора та стартера.")

    print("Будь ласка, відповідайте на запитання 'так' або 'ні'.")

    # Перевірка системи ESP
    answer = input("Чи горить лампочка 'ESP'? ")
    if answer.lower() == "так":
        print("Необхідно провести діагностику двигуна.")

    # Запитання про систему запалювання
    answer = input("Чи є іскра на свічках запалювання? ")
    if answer.lower() == "ні":
        print("Перевірте свічки запалювання та систему запалювання.")

    # Запитання про акумулятор
    answer = input("Чи працює стартер? ")
    if answer.lower() == "ні":
        print("Перевірте стан акумулятора та стартера.")

    print("Будь ласка, відповідайте на запитання 'так' або 'ні'.")

    # Перевірка системи ESP
    answer = input("Чи горить лампочка 'ESP'? ")
    if answer.lower() == "так":
        print("Система ABS має несправності.")


print("Діагностика завершена.")

write_car_detailsdiagnostic_check("car_details.txt", "Car details here")
print("\nДіагностика завершена.")
